@model QLBGD.Models.NhanHieu

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<h2>Nhãn hiệu @Model.TenNhanHieu</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-2 mb-3">
            <img width="300px" height="300px" style="border-radius:10%;margin-left:30px;margin-top:20px;border:2px solid;" src="~/Images/brands/@Html.DisplayFor(model => model.AnhNH)" />
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-9">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Tên nhãn hiệu:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenNhanHieu)
                    </dd>

                    <dt>
                        Ghi chú:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GhiChu)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_SanPhamPartial", Model.SanPhams)

