@model IEnumerable<QLBGD.Models.SanPham>

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "Trang chủ";
}
<style>
    .donGia {
        color: crimson;
        font-weight: bold;
    }

    .a1 {
        color: dimgrey;
        font-weight: 600;
    }

        .a1:hover {
            background-color: #F5F5F5;
            color: black;
            text-decoration: none;
            font-weight: 700;
            text-align: center;
            border: 1px solid #2F4F4F;
            border-radius: 5px;
            filter: drop-shadow(0 0 2px black);
        }

    .tt {
        font-weight: 750;
    }

    .d1 {
        margin: 0px;
        padding: 5px;
    }

        .d1:hover {
            filter: drop-shadow(0 0 5px blue);
            border-radius: 1%;
            padding: 0;
        }

    input[type=submit] {
        margin: 5px;
    }

    small {
        color: #FDD017;
        font-size: 20px;
    }

    a:hover {
        text-decoration: none;
    }

    .list-group-item {
        border-right: none;
        border-left: none;
    }
</style>
