            </a>
            <a class="list-group-item a1" href="@Url.Action("Details", "NhanHieus", new { @id = "NH008"})">
                ELLESSE
            </a>
            <a class="list-group-item a1" href="@Url.Action("Details", "NhanHieus", new { @id = "NH009"})">
                FILA
            </a>
        </div>
    </div>
    <div class="col-lg-10">
        <div class="carousel slide my-4" id="carouselExampleIndicators" data-ride="carousel">
            <ol class="carousel-indicators">
                <li class="active" data-target="#carouselExampleIndicators" data-slide-to="0"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active"><img class="d-block img-fluid" src="~/Images/contents/a.jpg" alt="First slide" style="border-radius:10px;" /></div>
                <div class="carousel-item"><img class="d-block img-fluid" src="~/Images/contents/b.jpg" alt="Second slide" style="border-radius:10px;" /></div>
                <div class="carousel-item"><img class="d-block img-fluid" src="~/Images/contents/c.jpg" alt="Third slide" style="border-radius:10px;" /></div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <p class="h3 tt">Giày thời trang</p>
        <hr />
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.MaLoaiSanPham.Contains("LSP001"))
                {
                    <div class="mb-3 d1  col-3 ">
                        <div class="card h-100">
                            <a href="@Url.Action("Details", "SanPhams", new { @id = item.MaSanPham})">
                                <img class="card-img-top" src="~/Images/products/@Html.DisplayFor(modelItem => item.AnhSP)" alt="..." width="200" height="300px" />
                            </a>

                            <div class="card-body">
                                <h4 class="card-title"><a href="@Url.Action("Details", "SanPhams", new { @id = item.MaSanPham})" class="text-dark">@Html.DisplayFor(modelItem => item.TenSanPham)</a></h4>
                                <h5 class="donGia">@String.Format("{0:0,0}", item.DonGia) VND</h5>
                                <p class="card-text font-weight-bold">@Html.DisplayFor(modelItem => item.TinhTrang)</p>
                            </div>
                            <div class="card-footer"><small>★ ★ ★ ★ ☆</small></div>
                            @using (Html.BeginForm("ThemGioHang", "GioHang", new { @cMaSanPham = item.MaSanPham, @strURL = Request.Url.ToString() }))
                            {
                                <input type="submit" style="cursor:pointer" value="Thêm vào giỏ hàng" class="btn btn-danger" />
                            }
                        </div>
                    </div>
                }
            }
