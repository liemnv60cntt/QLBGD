@model QLBGD.Models.KhachHang
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <link href="~/Assets/User/css/regis.css" rel="stylesheet" />

    <title>Đăng ký</title>
</head>
<body style="background-image: url('https://i.pinimg.com/originals/49/8f/2b/498f2b413532d5037f09ee640ee907ae.jpg'); background-color: #cccccc;">
    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                <h3>Welcome</h3>
                <p>FS Sneakers Nha Trang</p>
                @Html.ActionLink("Đăng nhập ngay", "Login", "KhachHang", new { @class = "text-light" })
            </div>
            <div class="col-md-9 register-right">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Đăng ký</h3>
                        @using (Html.BeginForm("Regis", "KhachHang", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row register-form">
                                <div class="col-md-6">
                                    @*<div class="form-group">
                                            <input type="text" value=@ViewBag.MaKhachHang disabled readonly class="form-control" />
                                            @Html.ValidationMessageFor(model => model.MaKhachHang, "", new { @class = "text-danger" })
                                        </div>*@
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Ho, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Họ *" } })
                                        @Html.ValidationMessageFor(model => model.Ho, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Tên *" } })
                                        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Số điện thoại *" } })
                                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <div class="maxl">
                                            <label class="radio inline">
                                                Nam @Html.RadioButtonFor(model => model.GioiTinh, "True", new { @checked = "checked" }) &nbsp;
                                            </label>
                                            <label class="radio inline">
                                                Nữ @Html.RadioButtonFor(model => model.GioiTinh, "False")
                                            </label>
                                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Email *" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Mật khẩu *", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.TinhOrTP, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Tỉnh thành *" } })
                                        @Html.ValidationMessageFor(model => model.TinhOrTP, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control col-md-12", @placeholder = "Địa chỉ *" } })
                                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                    </div>
                                    <button type="submit" class="btnRegister">Đăng ký</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>
</body>
</html>

