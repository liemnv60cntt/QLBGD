@model QLBGD.Models.SanPham

@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    string gtinh = "";
}
<style>
    th, td {
        border-bottom: 2px solid #a9a9a9;
        height: 50px;
    }
</style>
<h2>Thông tin chi tiết</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-4">
            <img width="600" height="600" style="border-radius: 10%; margin-left: 30px; margin-top: 20px; border: 1px solid #a9a9a9" src="~/Images/products/@Html.DisplayFor(model => model.AnhSP)" />
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-6">
            <br />
                <h3 style="font-weight: bold;font-size:25px;">@Html.DisplayFor(model => model.TenSanPham)</h3>
            <table>

                <tr>
                    <th>Tình trạng: </th>
                    <td>&nbsp; &nbsp; &nbsp; &nbsp;</td>
                    <td>@Html.DisplayFor(model => model.TinhTrang)</td>
                </tr>



                <tr>
                    <th>Loại sản phẩm: </th>
                    <td>&nbsp; &nbsp; &nbsp; &nbsp;</td>
                    <td>@Html.DisplayFor(model => model.LoaiSanPham.TenLoaiSanPham)</td>
                </tr>

                <tr>
                    <th>Nhãn hiệu: </th>
                    <td>&nbsp; &nbsp; &nbsp; &nbsp;</td>
                    <td>@Html.DisplayFor(model => model.NhanHieu.TenNhanHieu)</td>
                </tr>
                <tr>
                    <th>Màu sắc: </th>
                    <td>&nbsp; &nbsp; &nbsp; &nbsp;</td>
                    <td>@Html.DisplayFor(model => model.MauSac)</td>
                </tr>
                <tr>
                    <th>Kích thước: </th>
                    <td>&nbsp; &nbsp; &nbsp; &nbsp;</td>
                    <td>@Html.DisplayFor(model => model.KichThuoc)</td>
                </tr>
                <tr>
                    <th>Phù hợp với: </th>
                    <td>&nbsp; &nbsp; &nbsp; &nbsp;</td>
                    <td style="width: 500px;">
                        @{if (Model.GioiTinh == true)
                            { gtinh = "Nam"; }
                            else
                            { gtinh = "Nữ"; }
                        }
                        @gtinh
                    </td>
                </tr>
                <tr>
                    <th>Đơn giá: </th>
                    <td>&nbsp; &nbsp; &nbsp; &nbsp;</td>
                    <td><div class="text-danger font-weight-bold">@String.Format("{0:0,0}", Model.DonGia) VND</div></td>
                </tr>
                <tr>
                    <td style="border: none;">
                        &nbsp;
                    </td>
                </tr>


            </table>
            <div>
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @cMaSanPham = Model.MaSanPham, @strURL = Request.Url.ToString() }))
                {
                    <input type="submit" style="cursor:pointer;" value="Thêm vào giỏ hàng" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col-md-1"></div>
    <div class="col-md-5 mt-2">
        <h4 class="border-bottom font-weight-bold">Mô tả sản phẩm:</h4>
        @Html.DisplayFor(model => model.MoTa)
    </div>
    <div class="col-md-6">
        @Html.Partial("_PhanHoiPatial", Model.PhanHois)
        <br />
        <br />
        @using (Html.BeginForm("Index", "PhanHois", new { @maSanPham = Model.MaSanPham }))
        {

            <input type="text" name="feedback" />

            <input type="submit" style="cursor:pointer" value="Phản hồi" class="btn btn-success" />
        }
    </div>
</div>

