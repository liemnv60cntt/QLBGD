@model IEnumerable<QLBGD.Models.SanPham>

<div class="card mb-4">
	<div class="card-header font-weight-bold">
		<i class="fas fa-table mr-1"></i>
		Danh sách sản phẩm
	</div>
	@*<p>
		@Html.ActionLink("Tạo mới", "Create")
	</p>*@
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr style="background-color: #778899;">
						<th>
							Mã sản phẩm
						</th>
						<th>
							Tên sản phẩm
						</th>
						<th>
							Nơi sản xuất
						</th>
						<th>
							Đơn giá
						</th>
						<th>
							Tình trạng
						</th>
						<th>
							Mô tả
						</th>
						<th>
							Loại sản phẩm
						</th>
						<th>
							Nhãn hiệu
						</th>
						<th>
							Ảnh sản phẩm
						</th>
						<th></th>
					</trstyle="background-color:>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.MaSanPham)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TenSanPham)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.MauSac)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.DonGia)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TinhTrang)
							</td>
							<td style="width:250px;">
								@Html.DisplayFor(modelItem => item.MoTa)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSanPham)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.NhanHieu.TenNhanHieu)
							</td>
							<td>
								<img src="~/Images/products/@Html.DisplayFor(modelItem => item.AnhSP)" width="250" height="250" />
							</td>
							@*<td>
								@Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaSanPham })
							</td>*@
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>